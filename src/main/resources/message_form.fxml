<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="messageGrid" stylesheets="@application.css" alignment="center" hgap="10" prefHeight="700.0" prefWidth="1000.0" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.test.MessageController">
<!-- Ajoutez ici d'autres éléments pour personnaliser la fenêtre de message -->
<Button text="Fermer" onAction="#closeMessageWindow" />
    <!-- Barre de texte pour taper le message -->
    <TextField fx:id="messageTextField" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" promptText="Tapez votre message ici"/>

    <!-- Bouton "Envoyer" -->
    <Button fx:id="sendButton" text="Envoyer" GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#sendMessage"/>
</GridPane>

