<GridPane fx:id="gridpane" alignment="center" hgap="10" stylesheets="@application.css" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.test.ServiceRecurrentController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" />
      <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="242.0" />
      <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" minWidth="-Infinity" />
      <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" maxWidth="Infinity" minWidth="-Infinity" prefWidth="60.0" />
        <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" maxWidth="Infinity" minWidth="-Infinity" />
      <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="-Infinity" />
    </columnConstraints>
   <children>
       <!-- Add Name Label -->
       <Label text="Désignation :" GridPane.rowIndex="3" />
      <Label text="Répétition :" GridPane.rowIndex="3" />
      <HBox spacing="30.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
         <children>
            <RadioButton mnemonicParsing="false" onAction="#isPonctual" text="Ponctuel">
               <toggleGroup>
                  <ToggleGroup fx:id="type11" />
               </toggleGroup>
               <padding>
                  <Insets top="8.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="frequencyRadiobutton" mnemonicParsing="false" selected="true" text="Récurrent" toggleGroup="$type11">
               <padding>
                  <Insets top="8.0" />
               </padding>
            </RadioButton>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="5.0" GridPane.columnIndex="5" GridPane.halignment="RIGHT" GridPane.rowIndex="5">
         <children>
             <!-- Add Cost Label -->
             <Label text="Coût du service :" />
             <TextField fx:id="costIdField" maxWidth="70.0" />
            <Label text="Florains" textAlignment="JUSTIFY" />
         </children>
      </HBox>
       <!--  Add categorie Label -->
       <Label text="Catégorie :" GridPane.rowIndex="5" />
       <ComboBox fx:id="categories" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="31.0" prefWidth="422.0" promptText="Sélectionnez une catégorie" GridPane.columnIndex="1" GridPane.columnSpan="4" GridPane.rowIndex="5" />
       <!-- Add Description Label -->
       <Label text="Description :" GridPane.rowIndex="6" GridPane.valignment="TOP" />
       <TextArea fx:id="descriptionIdField" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="100.0" prefWidth="350.0" promptText="Brève description du service" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.hgrow="NEVER" GridPane.rowIndex="6" />
       <!-- Add localization TextField with label -->
       <Label text="Code postal :" GridPane.columnIndex="0" GridPane.rowIndex="7" />
       <TextField fx:id="zipcodeField" promptText="Localisation du service" GridPane.columnIndex="1" GridPane.rowIndex="7" />
       <!-- Add comments TextArea with label -->
       <Label text="Commentaires :" GridPane.rowIndex="8" GridPane.valignment="TOP" />
       <TextArea fx:id="commentsField" prefHeight="200.0" prefWidth="200.0" promptText="Remarques éventuelles" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.hgrow="NEVER" GridPane.rowIndex="8" />
      
       <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="14">
         <children>
         	<!-- Add Button -->
             <Button fx:id="addButton" defaultButton="true" onAction="#addService" prefHeight="40" prefWidth="100" text="Enregistrer">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
         	<!-- Del Button -->
            <Button fx:id="delButton" defaultButton="true" disable="true" onAction="#delService" prefHeight="40" prefWidth="100" text="Supprimer">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <HBox spacing="30.0" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
         <children>
           <RadioButton mnemonicParsing="false" selected="true" text="Je propose">
             <padding>
                <Insets top="5.0" />
             </padding>
               <toggleGroup>
                  <ToggleGroup fx:id="type1" />
               </toggleGroup></RadioButton>
            <RadioButton fx:id="requestRadiobutton" mnemonicParsing="false" text="Je recherche" toggleGroup="$type1">
               <padding>
                  <Insets top="5.0" />
               </padding></RadioButton>
         </children>
      </HBox>
       <!-- Add Name Text Field -->
       <TextField fx:id="nameIdField" promptText="Désignation du service" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.rowIndex="4" />
      <Label fx:id="serviceInfo" text="Information sur votre annonce" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnIndex="4" GridPane.columnSpan="2" GridPane.rowIndex="14">
         <children>
            <Button fx:id="orderButton" disable="true" mnemonicParsing="false" onAction="#bookService" prefHeight="40.0" prefWidth="100.0" text="Réserver">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            <Button fx:id="commentButton" mnemonicParsing="false" onAction="#commentAd" prefHeight="40.0" prefWidth="100.0" text="Commenter">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="9">
         <children>
            <Label prefHeight="26.0" prefWidth="50.0" text="Du :">
               <padding>
                  <Insets top="8.0" />
               </padding>
            </Label>
            <DatePicker fx:id="startDateField" prefHeight="23.0" prefWidth="145.0" promptText="Date de début">
               <HBox.margin>
                  <Insets top="4.0" />
               </HBox.margin>
            </DatePicker>
         </children>
      </HBox>
      <HBox layoutX="494.0" layoutY="434.0" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="4" GridPane.rowIndex="9">
         <children>
            <Label prefHeight="26.0" prefWidth="58.0" text="Jusqu'au :">
               <padding>
                  <Insets top="8.0" />
               </padding>
            </Label>
            <DatePicker fx:id="endDateField" prefHeight="23.0" prefWidth="145.0" promptText="Date de fin">
               <HBox.margin>
                  <Insets top="4.0" />
               </HBox.margin>
            </DatePicker>
         </children>
      </HBox>
      <HBox layoutX="704.0" layoutY="472.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="207.0" GridPane.columnIndex="1" GridPane.rowIndex="11">
         <children>
            <Label prefHeight="18.0" prefWidth="43.0" text="Jour :">
               <HBox.margin>
                  <Insets top="8.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="days" prefWidth="150.0" promptText="Sélectionnez un jour">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Lundi" />
                        <String fx:value="Mardi" />
                        <String fx:value="Mercredi" />
                        <String fx:value="Jeudi" />
                        <String fx:value="Vendredi" />
                        <String fx:value="Samedi" />
                        <String fx:value="Dimanche" />
                  </FXCollections>
               </items>
               <HBox.margin>
                  <Insets top="3.0" />
               </HBox.margin>
            </ComboBox>
         </children>
      </HBox>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="28.0" prefWidth="207.0" GridPane.columnIndex="4" GridPane.rowIndex="11">
         <children>
            <Label prefHeight="18.0" prefWidth="43.0" text="Heure :">
               <HBox.margin>
                  <Insets top="8.0" />
               </HBox.margin>
            </Label>
            <Spinner fx:id="heure" editable="true" prefHeight="37.0" prefWidth="61.0">
               <valueFactory>
                  <SpinnerValueFactory.IntegerSpinnerValueFactory max="23" min="0" />
               </valueFactory>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Spinner>
            <Spinner fx:id="minutes" editable="true" prefHeight="37.0" prefWidth="61.0">
               <valueFactory>
                  <SpinnerValueFactory.IntegerSpinnerValueFactory max="59" min="0" />
               </valueFactory>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Spinner>
         </children>
         <GridPane.margin>
            <Insets bottom="2.0" />
         </GridPane.margin>
      </HBox>
   </children>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints minHeight="-Infinity" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints maxHeight="150.0" minHeight="-Infinity" />
      <RowConstraints maxHeight="116.0" minHeight="-Infinity" />
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefHeight="60.0" />
      <RowConstraints maxHeight="46.0" minHeight="-Infinity" />
      <RowConstraints maxHeight="33.0" minHeight="-Infinity" />
      <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
      <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
      <RowConstraints />
      <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
      <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="80.0" />
   </rowConstraints>
</GridPane>
