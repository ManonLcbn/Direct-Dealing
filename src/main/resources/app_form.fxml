<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" stylesheets="@application.css" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.telecomnancy.test.AppController">
    <padding>
        <Insets bottom="10" left="20" right="20" top="10" />
    </padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="-Infinity" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="-Infinity" />
      <ColumnConstraints />
    </columnConstraints>
   <children>
      <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#addDeal" text="Déposer une annonce" />
      <Button fx:id="viewProfileButton" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#viewProfile" text="Mon compte" GridPane.columnIndex="2" />
      <Label styleClass="label-bright" text="Rechercher:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <TextField fx:id="keywords" promptText="Code postal (complet ou partiel) ou mots clés séparés par ;" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
      <Button fx:id="aboutButton" disable="true" mnemonicParsing="false" onAction="#aboutDeal" text="En savoir plus..." GridPane.rowIndex="4" />
      <TableView id="AdTableview" fx:id="annoncesTableView" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="3" GridPane.rowIndex="3">
        <columns>
          <TableColumn fx:id="annonceRow1" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Localisation" />
          <TableColumn fx:id="annonceRow2" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Utilisateur" />
          <TableColumn fx:id="annonceRow3" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Type" />
          <TableColumn fx:id="annonceRow4" maxWidth="Infinity" minWidth="450" prefWidth="120.0" text="Annonce" />
        </columns>
      </TableView>
      <HBox spacing="10" GridPane.columnIndex="1">
         <children>
	              <RadioButton mnemonicParsing="false" selected="true" text="Service">
               <toggleGroup>
                  <ToggleGroup fx:id="filter1" />
               </toggleGroup>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </RadioButton>
                  <RadioButton mnemonicParsing="false" text="Matériel" toggleGroup="$filter1">
               <padding>
                  <Insets top="5.0" />
               </padding>
            </RadioButton>
         </children>
      </HBox>
      <TableView fx:id="feedbackTableView" prefHeight="100.0" prefWidth="100.0" GridPane.columnSpan="3" GridPane.rowIndex="5">
        <columns>
          <TableColumn fx:id="fbRow1" prefWidth="100.0" text="Evaluation" />
          <TableColumn fx:id="fbRow2" prefWidth="100.0" text="Nom" />
          <TableColumn fx:id="fbRow3" prefWidth="342.0" text="Avis" />
        </columns>
      </TableView>
      <HBox layoutX="231.0" layoutY="20.0" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <children>
            <RadioButton mnemonicParsing="false" text="Service" onAction="#showServices">
               <toggleGroup>
                  <ToggleGroup fx:id="filter2" />
               </toggleGroup>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </RadioButton>
            <RadioButton mnemonicParsing="false" selected="true" onAction="#showAds" text="Matériel" toggleGroup="$filter2">
               <padding>
                  <Insets top="5.0" />
               </padding>
            </RadioButton>
         </children>
      </HBox>
   </children>
   <rowConstraints>
      <RowConstraints minHeight="-Infinity" />
      <RowConstraints minHeight="-Infinity" />
      <RowConstraints minHeight="-Infinity" />
      <RowConstraints minHeight="-Infinity" />
      <RowConstraints minHeight="10.0" />
      <RowConstraints />
   </rowConstraints>
 
   
</GridPane>
