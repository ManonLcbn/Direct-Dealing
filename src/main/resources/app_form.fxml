          <TableColumn fx:id="annonceRow2" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Utilisateur" />
          <TableColumn fx:id="annonceRow3" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Type" />
